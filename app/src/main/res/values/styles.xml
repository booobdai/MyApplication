<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="head_title_barstyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
    </style>

    <style name="ProgressBarBig">
        <item name="android:indeterminateDrawable">@drawable/progress_big</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>

    <declare-styleable name="MarqueeView">
        <!--间隔时间-->
        <attr name="intervalTime" format="integer" />
        <attr name="scrollTime" format="integer" />
        <attr name="orientation" format="enum">
            <enum name="bottomToTop" value="1" />
            <enum name="topToBottom" value="2" />
            <enum name="rightToLeft" value="3" />
            <enum name="leftToRight" value="4" />
        </attr>
        <attr name="enableAlphaAnim" format="boolean" />
        <attr name="enableScaleAnim" format="boolean" />
    </declare-styleable>

</resources>
