<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pv="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0867AB"
            app:pv_host_text_size="@dimen/sp_size_21sp_T21"
            app:pv_particle_text_size="@dimen/sp_size_18sp_T18"
            pv:pv_host_text="Linked"
            pv:pv_host_text_anim_time="3000"
            pv:pv_particle_text="in"
            app:pv_text_color="@color/color_red"
            pv:pv_spread_anim_time="2000"
            pv:pv_text_anim_time="3000" />

        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pv_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFF"
            android:visibility="gone"
            pv:pv_background_color="#FFF"
            pv:pv_host_text="WEEX"
            pv:pv_host_text_anim_time="500"
            pv:pv_particle_text="2.0"
            pv:pv_particle_text_size="12sp"
            pv:pv_spread_anim_time="800"
            pv:pv_text_anim_time="500"
            pv:pv_text_color="#03A9F4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pv_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#757575"
            pv:pv_background_color="#757575"
            pv:pv_host_text="OpenGL"
            pv:pv_host_text_size="14sp"
            pv:pv_particle_text="ES"
            pv:pv_particle_text_size="30sp"
            pv:pv_text_color="#BBDEFB" />

        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pv_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E2E2E"
            pv:pv_background_color="#2E2E2E"
            pv:pv_host_text="github"
            pv:pv_particle_text=".com"
            pv:pv_particle_text_size="14sp"
            pv:pv_text_color="#FFF" />

    </LinearLayout>

</LinearLayout>